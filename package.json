{
  "name": "homeassistant-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/sluzynsk/homeassistant-desktop"
  },
  "version": "1.5.0",
  "description": "Desktop App (Windows / macOS / Linux) for Home Assistant built with Electron",
  "main": "app.js",
  "scripts": {
    "start": "electron app.js",
    "build-mac-arm64": "electron-builder build --mac --arm64 --publish never",
    "build-linux-arm64": "electron-builder build --linux appimage --arm64 --publish never",
    "build-win-arm64": "electron-builder build --win --arm64 --publish never",
    "build-mac-x64": "electron-builder build --mac --x64 --publish never",
    "build-linux-x64": "electron-builder build --linux appimage --x64 --publish never",
    "build-win-x64": "electron-builder build --win --x64 --publish never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Steve Luzynski <steve@luzynski.net> (https://github.com/sluzynsk)",
  "homepage": "https://github.com/sluzynsk/homeassistant-desktop",
  "license": "Apache-2.0",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "bonjour": "^3.5.0",
    "electron-store": "^8.0.1",
    "electron-traywindow-positioner": "^1.1.0",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "electron": "^20.1.0",
    "electron-builder": "^5.5.0"
  },
  "build": {
    "appId": "com.electron.homeassistant-desktop",
    "productName": "Home Assistant"
  }
}
